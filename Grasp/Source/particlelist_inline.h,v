#ifndef PARTICLELIST_INLINE_H
#define PARTICLELIST_INLINE_H
// INLINE (inline) FUNCTION DEFINITIONS
//
// Inlining inner loop operations provides significant performance gain
//
inline Particle* ParticleList::get_particle(const int& i) {
  return &particles[i];
}
#endif
